<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/accueil_bg"
    android:padding="24dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp"
        android:background="@drawable/welcome_card_bg"
        android:elevation="10dp"
        android:layout_margin="16dp"
        android:gravity="center"
        android:clipToOutline="true">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Troc!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/userInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User: yassine@gmail.com"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="@drawable/user_info_bg"
            android:layout_marginBottom="30dp" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/logout_btn_bg"
            android:elevation="6dp" />

    </LinearLayout>

</LinearLayout>
